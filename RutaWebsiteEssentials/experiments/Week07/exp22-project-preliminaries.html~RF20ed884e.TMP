<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, minimum-scale=1">

    <title>Project preliminaries - Artsy API</title>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            alert("ready!!");
            var x = document.getElementById("demo");
            
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            }
            else {
                x.innerHTML = "Geolocation is not supported by this browser.";
            }
            
            function showPosition(position) {
                x.innerHTML = "Latitude: " + position.coords.latitude +
                "<br>Longitude: " + position.coords.longitude;
            }
            var url = "http://places.cit.api.here.com/places/v1/discover/explore?at=40.74917,-73.98529&app_id=E6d3Wfmofr1rYyUCR88r&app_code=KCoseeOnSQiA_i-RiZqsXw&tf=plain";

            $.getJSON(url)
                .done(function (data) {
                    alert("retieving data");
                    $.each(data, function (i, item) {
                        alert(i);
                        if (i == 'results') {
                            alert("inside if");
                            $.each(i.items, function (j, item) {
                                alert("inside for each");
                                alert(j.distance);
                            });
                        }
                    });
                });
        });
    </script>        
</head>
<body>
    <div id="demo"></div>
</body>
</html>
